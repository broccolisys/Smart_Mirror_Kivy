

<Weather>:
    canvas:
        Color:
            rgb: 0.12, 0.12, 0.12
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    padding:20

    BoxLayout:
        size_hint: 1,0.15
        Label:
            text:'s'
    BoxLayout:
        orientation:'horizontal'
        BoxLayout:
            size_hint: 0.2,1
        BoxLayout:
            canvas.before:
                BorderImage:
                    border: 10, 10, 10, 10
                    source: './images/button_white_fix.png'
                    pos: self.pos
                    size: self.size
            Label:
                text:"Graph"
        BoxLayout:
            size_hint: 0.2,1

    BoxLayout:
        size_hint: 1,0.2
        Label:
            text:'s'
