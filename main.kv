#: import Button kivy.uix.button.Button

<MyMain>:
    canvas:
        Color:
            rgb: 0.12, 0.12, 0.12
        Rectangle:
            size: self.size
            pos: self.pos

    orientation: 'vertical'
    padding: 20
    spacing: 10
    BoxLayout:
    	orientation:'horizontal'
    	size_hint: 1, 0.2
        BoxLayout:
            Label:
                text:root.uxWeeksDayMonths
                font_size: 25
    	BoxLayout:
    	BoxLayout:
    	BoxLayout:
    		Label:
        		text: root.uxTime
                font_size: 30
    BoxLayout:
    	orientation:'horizontal'
    	size_hint: 1, 0.9
    	BoxLayout:
    		size_hint: None,1

        BoxLayout:
            canvas.before:
                BorderImage:
                    border: 10, 10, 10, 10
                    source: './images/button_white_fix.png'
                    pos: self.pos
                    size: self.size
    	    BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    padding: 35
                    IconButton:
                        source:"./images/iconNews.png"
                BoxLayout:
                    padding: 35
                    IconButton:
                        source:"./images/iconWeather.png"

            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    padding: 35
                    IconButton:
                        source: "./images/iconYoutube.png"
                BoxLayout:
                    padding: 35
                    IconButton:
                        source: "./images/iconSettings.png"
        BoxLayout:
        	size_hint: None,1


    BoxLayout:
    	size_hint: 1, 0.1

